  // ],

  // "waitFor": "postCreateCommand",

  // "postAttachCommand": {
  //   "Astro tests": "pnpm run build && pnpm run test"
  // },

  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
